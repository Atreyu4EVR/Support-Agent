{
  "name": "bsc-support-agent",
  "description": "AI-powered support agent for BYU-Idaho students, faculty, and staff - Monorepo",
  "version": "1.0.0",
  "private": true,
  "author": "BYU-Idaho Information Technology",
  "repository": {
    "type": "git",
    "url": "https://github.com/BYUI-Information-Technology/BSC-Agent"
  },
  "workspaces": [
    "apps/frontend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "cd apps/frontend && npm run dev",
    "dev:backend": "cd apps/backend && python src/api.py",
    "build": "npm run build:frontend",
    "build:frontend": "cd apps/frontend && npm run build",
    "lint": "cd apps/frontend && npm run lint",
    "start": "npm run dev",
    "install:all": "npm install && cd apps/frontend && npm install",
    "docker:build": "docker-compose -f configs/docker/docker-compose.yml build",
    "docker:up": "docker-compose -f configs/docker/docker-compose.yml up -d",
    "docker:down": "docker-compose -f configs/docker/docker-compose.yml down",
    "docker:logs": "docker-compose -f configs/docker/docker-compose.yml logs -f",
    "docker:clean": "docker-compose -f configs/docker/docker-compose.yml down -v --rmi all",
    "docker:restart": "docker-compose -f configs/docker/docker-compose.yml restart",
    "docker:rebuild": "npm run docker:down && npm run docker:build && npm run docker:up",
    "azure:deploy": "./scripts/deploy-azure.sh",
    "azure:status": "az containerapp list --resource-group byui-supportagent-p --output table",
    "setup": "./scripts/setup-dev.sh"
  },
  "devDependencies": {
    "concurrently": "^9.2.0"
  }
}